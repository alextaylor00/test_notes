<% if local_assigns[:edit] %>
  <% url = note_path %>
<% else %>
  <% url = project_notes_path %>
<% end %>

<%= form_for [@project, @note], url: url do |f| %>

    <div class="form-group">
      <%= render 'shared/error_messages', object: f.object %>
    </div>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :text %>
      <%= f.text_area :text, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :tag_list %>
      <%= f.text_field :tag_list, value: separate_with_commas(@note.tag_list), class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= link_to "Cancel", project_path(@project), class: "btn" %>
      <%= f.submit 'Post', class: "btn btn-primary" %>
    </div>
<% end %>
