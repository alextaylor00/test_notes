<div class="row">
  <div class="col-sm-10 main">
    <h2 class="page-header"><%= @project.name %></h2>
    <h3>Notes <small><%= pluralize @project.notes.count, "note" %></small></h3>
    <table class="table">
      <thead>
        <tr>
          <th>Status</th>
          <th>Note</th>
          <th>Date</th>
          <th>Tags</th>
        </tr>
      </thead>
      <tbody>
      <% @project.notes.each do |note| %>
        <tr>
          <td>*status*</td>
          <td>
            <h4><%= link_to note.title, note_path(note) %></h4>
            <p><%= preview_text note.text %></p>
          </td>
          <td><%= note.created_at.to_formatted_s(:long) %></td>
          <td>tags</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-sm-2 sidebar">
    <ul class="nav nav-pills nav-stacked">
      <li class="active"><%= link_to "New Note", new_project_note_path(@project) %></li>
    </ul>
  </div>
</div>
